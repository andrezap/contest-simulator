<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Domain\Judge\AbstractJudge"
            table="abstract_judge">

        <id name="id" column="id" type="uuid">
            <generator strategy="NONE"/>
        </id>

        <discriminator-column name="discriminator" type="string" length="32"/>
        <discriminator-map>
            <discriminator-mapping value="studio" class="App\Domain\Studio\Product\Product"/>
            <discriminator-mapping value="event" class="App\Domain\Event\EventOccurrence\Product\Product"/>
            <discriminator-mapping value="voucher" class="App\Domain\Voucher\Product\Product"/>
        </discriminator-map>
    </entity>
</doctrine-mapping>

